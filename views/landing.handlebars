<div class='container mt-4'>
  <h1>Welcome to Wardrobe Wizard!</h1>
  {{#if user.clothings}}
    <form action='/api/clothing/update-last-worn' method='POST' class='mt-4' id='update-last-worn'>

      <h2>Select your outfit:</h2>
      <div class='row'>
        <div class='col-md-6'>
          {{#each user.clothings}}
            <div class='form-check'>
              <input
                class='form-check-input'
                type='checkbox'
                name='outfitItems'
                id='outfitItem{{@index}}'
                value='{{this.id}}'
              />
              <label class='form-check-label' for='outfitItem{{@index}}'>
                {{this.description}}
                ({{this.color}}
                {{this.type}})
              </label>
            </div>
          {{/each}}
        </div>
      </div>
      <button type='submit' class='btn btn-primary mt-3'>Submit</button>
    </form>
  {{else}}
    <p>No clothing items found in your closet.</p>
  {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="js/updateclothing.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
