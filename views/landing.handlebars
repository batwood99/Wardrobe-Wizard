<div class="container mt-4">
  <h1>Welcome to Wardrobe Wizard!</h1>
  {{#if user.clothings}}
    <form action="/submit-outfit" method="POST">
      <h2>Select your outfit:</h2>
      <div class="row">
        <div class="col-md-6">
          {{#each user.clothings}}
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="outfitItems"
                id="outfitItem{{@index}}"
                value="{{this._id}}"
              />
              <label class="form-check-label" for="outfitItem{{@index}}">
                {{this.description}} ({{this.color}} {{this.type}})
              </label>
            </div>
          {{/each}}
        </div>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
  {{else}}
    <p>No clothing items found in your closet.</p>
  {{/if}}
</div>

